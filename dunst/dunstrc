[global]
    monitor = 0
    follow = keyboard
    geometry = "350x400-10+10"
    indicate_hidden = no
    shrink = no
    transparency = 30
    notification_height = 0
    separator_height = 3
    padding = 10
    horizontal_padding = 10
    frame_width = 0
    frame_color = "#9D9E9F"
    separator_color = auto
    sort = no
    idle_threshold = 0

    ### Text ###

    font = Cozette 11
    line_height = 5
    markup = full
    format = "%s\n%b"
    alignment = right
    show_age_threshold = -1
    word_wrap = no
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = true
    show_indicators = no
    ignore_dbusclose = false

    ### Icons ###
    icon_position = left
    min_icon_size = 100
    max_icon_size = 100
    icon_folders = ""
    sticky_history = yes

    # Maximum amount of notifications kept in history
    history_length = 1
    title = Dunst
    class = Dunst
    startup_notification = false

[shortcuts]

    # Shortcuts are specified as [modifier+][modifier+]...key
    # Available modifiers are "ctrl", "mod1" (the alt-key), "mod2",
    # "mod3" and "mod4" (windows-key).
    # Xev might be helpful to find names for keys.

    # Close notification.
    close = ctrl+space

    # Close all notifications.
    close_all = ctrl+shift+space

    # Redisplay last message(s).
    # On the US keyboard layout "grave" is normally above TAB and left
    # of "1". Make sure this key actually exists on your keyboard layout,
    # e.g. check output of 'xmodmap -pke'
    history = ctrl+grave

    # Context menu.
    context = ctrl+shift+period

[experimental]
    per_monitor_dpi = 96

[urgency_low]
    background = "#0F1112"
    foreground = "#9D9E9F"
    timeout = 3

[urgency_normal]
    background = "#0F1112"
    foreground = "#9D9E9F"
    timeout = 3

[urgency_critical]
    background = "#0F1112"
    foreground = "#9D9E9F"
    timeout = 3
